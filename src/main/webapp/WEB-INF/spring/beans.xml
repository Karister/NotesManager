<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    					http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd">
   
	<bean id="selectedNotesValidator" class="pl.arczynskiadam.notesmanager.web.form.validation.SelectedCheckboxesValidator">
		<property name="errCode" value="NotesSelectionForm.ids.NoneSelected" />
	</bean>
   	<bean id="dateFilterValidator" class="pl.arczynskiadam.notesmanager.web.form.validation.DateFilterValidator">
   		<property name="bothEmptyErrCode" value="DateFilter.dates.empty" />
   		<property name="switchedDatesErrCode" value="DateFilter.dates.switched" />
   	</bean>
   
	<util:list id="notesPageSizes" value-type="java.lang.Integer">
		<value>5</value>
	    <value>10</value>
	    <value>15</value>
	    <value>25</value>
	    <value>50</value>
	    <value>100</value>
	</util:list>
	
	<util:list id="themes" value-type="java.lang.String">
		<value>blue</value>
	    <value>yellow</value>
	    <value>green</value>
	    <value>red</value>
	</util:list>
	
	<util:list id="locales" value-type="java.lang.String">
		<value>en_EN</value>
	    <value>pl_PL</value>
	</util:list>
	
	<bean id="noteMapper" class="org.dozer.DozerBeanMapper">
	<property name="mappingFiles">
		<list>
			<value>dozer/noteMapping.xml</value>
			<value>dozerJdk8Converters.xml</value>
		</list>
	</property>
</bean>
</beans>